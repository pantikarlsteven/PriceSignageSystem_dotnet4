<script>
    //function openReportInNewTab() {
    //    var form = document.getElementById('reportForm');
    //    form.target = '_blank';
    //    form.submit();
    //}

    function openQueueReportInNewTab() {
        var url = '/Queue/PrintQueueList';
        window.open(url, '_blank');
    }

    $(document).ready(function () {

        $(".btnCollapse").on("click", function () {
            // Toggle the aria-expanded attribute
            var isExpanded = $(this).attr("aria-expanded") === "true";
            $(this).attr("aria-expanded", !isExpanded);
        });


        var convertedRegPrice = 0;
        var convertedCurrPrice = 0;

        $(".editBtn").click(function () {
            $("#currPrice").prop("disabled", false);
        });

        $("#currPrice").on("change", function () {
            var regPrice = $("#regPrice");
            var currPrice = $("#currPrice");
            convertedRegPrice = Number(regPrice.val());
            convertedCurrPrice = Number(currPrice.val());
            var typeId = $('#SelectedTypeId');

            if (convertedCurrPrice >= convertedRegPrice) {
                regPrice.val($(this).val());
                typeId.val(1); //Regular
            }
            else if (convertedCurrPrice < convertedRegPrice) {
                typeId.val(2); //Save
            }

        });

        $(".newPrint").click(function () {

            var isCurrDisabled = $('#currPrice').prop('disabled');

            if (isCurrDisabled) {

                var reportDto = {
                    O3SKU: @Model.O3SKU,
                    SizeId: 0,
                    TypeId: 0,
                    CategoryId: 0
                };

                reportDto.TypeId = $('#SelectedTypeId').val();
                reportDto.CategoryId = $('#SelectedCategoryId').val();
                reportDto.SizeId = $('#SelectedSizeId').val();
                $("#reportIframe").attr("src", "/Report/PrintPreviewSingleReport?response=" + JSON.stringify(reportDto));

                var reportIframe = document.getElementById("reportIframe");
                if (reportIframe) {
                    reportIframe.onload = function () {
                        reportIframe.contentWindow.print();
                    };
                    reportIframe.src = $("#reportIframe").attr("src");
                }

            }else {

                // TextArea
                var textAreaHtml = '<div class="form-row">' +
                    '<div class="form-group row col-12">' +
                    '<label class="col-3" for="remarks" style="color: red;">Remarks: </label>' +
                    '<textarea class="col-6  ml-3 form-control" id="remarks" rows="2" cols="20" placeholder="required"></textarea>' +
                    '</div>';
                // Build the HTML for the print button
                var printButtonHtml = '<button id="editPrintBtn" class="btn btn-primary">Print</button>' +
                    '<button type="button" class="btn btn-secondary ml-2" data-dismiss="modal">Cancel</button>';
;

                // Create the modal content
                var modalContent = '<div class="modal-dialog modal-dialog-centered">' +
                    '<div class="modal-content">' +
                    '<div class="modal-header">' +
                    '<h5 class="modal-title">Edit Sku # ' + @Model.O3SKU + '</h5>' +
                    '<button type="button" class="close" data-dismiss="modal" aria-label="Close">' +
                    '<span aria-hidden="true">&times;</span>' +
                    '</button>' +
                    '</div>' +
                    '<div class="modal-body">' +
                    textAreaHtml +
                    '</div>' +
                    '<div class="modal-footer">' +
                    printButtonHtml +
                    '</div>' +
                    '</div>' +
                    '</div>';

                // Remove any existing modals
                $('#modalView').remove();

                // Append the modal to the body
                $('body').append('<div id="modalView" class="modal">' + modalContent + '</div>');

                // Show the modal with fade-in effect from top
                $('#modalView').modal({
                    show: true,
                    backdrop: false,
                    keyboard: false
                });

                $('#editPrintBtn').click(function () {
                    $("#loadingContainer").show();
                    var remarks = $('#remarks').val();
                    var newtypeId = $('#SelectedTypeId').val();

                    if (remarks != "") {

                        var reportDto = {
                            O3SKU: @Model.O3SKU,
                            SizeId: 0,
                            TypeId: newtypeId,
                            CategoryId: 0,
                            O3REGU: convertedRegPrice,
                            O3POS: convertedCurrPrice,
                            Remarks: remarks
                        };

                        reportDto.TypeId = $('#SelectedTypeId').val();
                        reportDto.CategoryId = $('#SelectedCategoryId').val();
                        reportDto.SizeId = $('#SelectedSizeId').val();
                        $("#reportIframe").attr("src", "/Report/PrintPreviewSingleReport?response=" + JSON.stringify(reportDto));

                        var reportIframe = document.getElementById("reportIframe");
                        if (reportIframe) {
                            reportIframe.onload = function () {
                                $("#loadingContainer").hide();
                                reportIframe.contentWindow.print();
                            };
                            reportIframe.src = $("#reportIframe").attr("src");
                        }
                        $('.clear').val('');
                        $('#modalView').modal('hide');

                    } else {
                        alert('Please input remarks!');
                        $("#loadingContainer").hide();
                    }


                });
            }

        });

        $(".queuebtn").click(function () {
            var sizeId = $('#SelectedSizeId').val();
            var typeId = $('#SelectedTypeId').val();
            var categoryId = $('#SelectedCategoryId').val();
            var strprcDto = @Html.Raw(Json.Encode(Model));


            $.ajax({
                url: "/Queue/QueueItem",
                type: "POST",
                data: {
                    strprcDto: strprcDto,
                    sizeId: sizeId,
                    typeId: typeId,
                    categoryId: categoryId
                },
                success: function (result) {
                    // Show success modal
                    var modalHtml = '<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">';
                    modalHtml += '<div class="modal-dialog" role="document">';
                    modalHtml += '<div class="modal-content">';
                    modalHtml += '<div class="modal-header">';
                    modalHtml += '<h5 class="modal-title" id="successModalLabel">Success!</h5>';
                    modalHtml += '<button type="button" class="close" data-dismiss="modal" aria-label="Close">';
                    modalHtml += '<span aria-hidden="true">&times;</span>';
                    modalHtml += '</button>';
                    modalHtml += '</div>';
                    modalHtml += '<div class="modal-body">';
                    modalHtml += 'Item queued successfully!';
                    modalHtml += '</div>';
                    modalHtml += '<div class="modal-footer">';
                    modalHtml += '<button type="button" class="qOkBtn btn btn-primary" data-dismiss="modal">OK</button>';
                    modalHtml += '</div>';
                    modalHtml += '</div>';
                    modalHtml += '</div>';
                    modalHtml += '</div>';

                    $('body').append(modalHtml);
                    $('#successModal').modal('show');
                },
                error: function (xhr, status, error) {
                    console.error("Error queuing item: " + error);
                }
            });
        });

         //PRINT BUTTON
        $('.qListbtn').click(function () {
                $.ajax({
                    url: '@Url.Action("GetAllSizes", "STRPRC")' ,
                    type: 'POST',
                    success: function (response) {
                        // Create the dropdown options
                        var sizeOptions = '';

                        // Populate dropdown options from the server response
                        for (var i = 0; i < response.length; i++) {
                            var option = response[i];
                            sizeOptions += '<option value="' + option.Id + '">' + option.Name + '</option>';
                        }

                        // Build the HTML for the dropdowns
                        var dropdownHtml = '<div class="form-row">' +
                            '<div class="form-group row col-12">' +
                            '<label class="col-sm-2 col-form-label" for="sizeDropdown">Size:</label>' +
                            '<select class="col-sm-9  ml-3 form-control" id="sizeDropdown" >' +
                            sizeOptions +
                            '</select>' +
                            '</div>';

                        // Build the HTML for the print button
                        var printButtonHtml = '<button id="printQueueButton" class="btn btn-primary">Print</button>';

                        // Create the modal content
                        var modalContent = '<div class="modal-dialog modal-sm modal-dialog-centered">' +
                            '<div class="modal-content">' +
                            '<div class="modal-header">' +
                            '<h5 class="modal-title">Print Queue Report</h5>' +
                            '<button type="button" class="close" data-dismiss="modal" aria-label="Close">' +
                            '<span aria-hidden="true">&times;</span>' +
                            '</button>' +
                            '</div>' +
                            '<div class="modal-body">' +
                            dropdownHtml +
                            '</div>' +
                            '<div class="modal-footer">' +
                            printButtonHtml +
                            '</div>' +
                            '</div>' +
                            '</div>';

                        // Remove any existing modals
                        $('#modalView').remove();

                        // Append the modal to the body
                        $('body').append('<div id="modalView" class="modal">' + modalContent + '</div>');

                        // Show the modal with fade-in effect from top
                        $('#modalView').modal({
                            show: true,
                            backdrop: false,
                            keyboard: false
                        });

                        $('#printQueueButton').click(function () {
                            $("#loadingContainer").show();

                            var selectedSize = $('#sizeDropdown').val();
                            var url = '@Url.Action("CheckItemQueuesPerUser", "Queue")';
                            $.ajax({
                                url: url,
                                type: 'POST',
                                data: { sizeId: selectedSize },
                                success: function (response) {
                                    if (response.success) {
                                        $('#modalView').modal('hide');
                                        $("#reportIframe").attr("src", "/Queue/PrintPreviewQueueReport?sizeId=" + selectedSize + "");
                                        var reportIframe = document.getElementById("reportIframe");
                                        if (reportIframe) {
                                            reportIframe.onload = function () {
                                                reportIframe.contentWindow.print();
                                                $("#loadingContainer").hide();

                                            };
                                            reportIframe.src = $("#reportIframe").attr("src");
                                        }

                                        //var url = "/Queue/PrintPreviewQueueReport";
                                        //$.ajax({
                                        //    url: url,
                                        //    type: 'GET',
                                        //    data: { sizeId: selectedSize },
                                        //    success: function (data) {
                                        //        if (!data)
                                        //            alert("Error in printing.");

                                        //    }
                                        //});
                                    } else {
                                        $('#modalView').modal('hide');
                                        // Show success modal
                                        var modalHtml = '<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">';
                                        modalHtml += '<div class="modal-dialog" role="document">';
                                        modalHtml += '<div class="modal-content">';
                                        modalHtml += '<div class="modal-header">';
                                        modalHtml += '<h5 class="modal-title" id="errorModalLabel">Error!</h5>';
                                        modalHtml += '<button type="button" class="close" data-dismiss="modal" aria-label="Close">';
                                        modalHtml += '<span aria-hidden="true">&times;</span>';
                                        modalHtml += '</button>';
                                        modalHtml += '</div>';
                                        modalHtml += '<div class="modal-body">';
                                        modalHtml += 'PLEASE QUEUE A PRODUCT FIRST.';
                                        modalHtml += '</div>';
                                        modalHtml += '<div class="modal-footer">';
                                        modalHtml += '<button type="button" class="okBtn btn btn-primary" data-dismiss="modal">OK</button>';
                                        modalHtml += '</div>';
                                        modalHtml += '</div>';
                                        modalHtml += '</div>';
                                        modalHtml += '</div>';

                                        $('body').append(modalHtml);
                                        $('#errorModal').modal('show');
                                    }
                                },
                                error: function (xhr, status, error) {
                                }
                            });

                        });
                    }
                });
        });

        // Close the modal when the modal close button is clicked
        $(document).on('click', '.modal .close', function () {
            $('#modalView').modal('hide');
            window.location.href = '/STRPRC/Index';
        });

        $(document).on('click', '.modal .okBtn', function () {
            $('#modalView').modal('hide');
            window.location.href = '/STRPRC/Index';
        });

        $(document).on('click', '#successModal .close', function () {
            $('#modalView').modal('hide');
            window.location.href = '/STRPRC/Index';
        });

        $(document).on('click', '#successModal .qOkBtn', function () {
            $('#modalView').modal('hide');
            window.location.href = '/STRPRC/Index';
        });

        // Remove the modal from the DOM when it is hidden
        $(document).on('hidden.bs.modal', '.modal', function () {
            $('#searchInput').val(''); // Reset the value of the search input
            $('#searchInput').focus();

            // Trigger the Enter key event
            var enterKeyEvent = $.Event('keyup');
            enterKeyEvent.keyCode = 13; // Enter key code
            $('#searchInput').trigger(enterKeyEvent);
            $(this).remove();
        });
    });
</script>
