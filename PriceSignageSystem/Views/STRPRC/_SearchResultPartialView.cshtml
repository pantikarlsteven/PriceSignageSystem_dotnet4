                @Html.TextBoxFor(m => m.O3FNAM, new { @class = "col", @readonly = true })
            </div>
            <div class="row">
                @Html.LabelFor(m => m.O3SDPT, new { @class = "col" })
                @Html.TextBoxFor(m => m.O3SDPT, new { @class = "col", @readonly = true })

                @Html.LabelFor(m => m.O3SLUM, new { @class = "col" })
