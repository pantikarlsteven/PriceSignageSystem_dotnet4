                <div class="col">
                </div>
                <div class="col">
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col">@Html.LabelFor(m => m.SelectedTypeId)</div>
                <div class="col">@Html.DropDownListFor(m => m.SelectedTypeId, Model.Types ?? new List<SelectListItem>(), "Select Type", new { @class = "form-control" })</div>

                <div class="col">@Html.LabelFor(m => m.SelectedSizeId)</div>
                <div class="col">@Html.DropDownListFor(m => m.SelectedSizeId, Model.Sizes ?? new List<SelectListItem>(), "Select Size", new { @class = "form-control" })</div>

