        });

        $("#SelectedTypeId").change(function () {

            var typeId = this.value;
            $.ajax({
                url: '@Url.Action("OndemandTypeOnchange", "STRPRC")',
                type: 'POST',
                data: { sku: @Model.O3SKU, typeId: typeId},
