                @Html.TextBoxFor(m => m.O3DIV, new { @class = "col", @readonly = true })
            </div>
            <div class="row">
                @Html.LabelFor(m => m.O3SCLS, new { @class = "col" })
                @Html.TextBoxFor(m => m.O3SCLS, new { @class = "col", @readonly = true })

                @Html.LabelFor(m => m.O3TUOM, new { @class = "col" })
