<script>
    //function openReportInNewTab() {
    //    var form = document.getElementById('reportForm');
    //    form.target = '_blank';
    //    form.submit();
    //}

    function openQueueReportInNewTab() {
        var url = '/Queue/PrintQueueList';
        window.open(url, '_blank');
    }

    function validateInput(event) {
        var inputValue = event.target.value;
        var regex = /^[A-Za-z]+$/; // Regular expression to match only letters

        if (!regex.test(inputValue)) {
            // If the input contains anything other than letters, remove those characters
            event.target.value = inputValue.replace(/[^A-Za-z]/g, '');
        }
    }

    $(document).ready(function () {
        var isScanUsed = localStorage.getItem("isScanUsed");

        if ('@ViewBag.IsScannedDtoNull' == "True" && isScanUsed == "true") {

            var modalHtml = '<div class="modal" id="notFoundModal" tabindex="-1" role="dialog" aria-labelledby="notFoundModalLabel" aria-hidden="true">';
            modalHtml += '<div class="modal-dialog" role="document">';
            modalHtml += '<div class="modal-content">';
            modalHtml += '<div class="modal-header">';
            modalHtml += '<h5 class="modal-title" id="notFoundModalLabel">Error!</h5>';
            modalHtml += '<button type="button" class="close" data-dismiss="modal" aria-label="Close">';
            modalHtml += '<span aria-hidden="true">&times;</span>';
            modalHtml += '</button>';
            modalHtml += '</div>';
            modalHtml += '<div class="modal-body">';
            modalHtml += 'Item Not Found!';
            modalHtml += '</div>';
            modalHtml += '<div class="modal-footer">';
            modalHtml += '<button type="button" class="notFoundBtn btn btn-primary" data-dismiss="modal">OK</button>';
            modalHtml += '</div>';
            modalHtml += '</div>';
            modalHtml += '</div>';
            modalHtml += '</div>';

            $('body').append(modalHtml);
            $('#notFoundModal').modal('show');
        }

        var origShortDesc = "";
        var origBrand = "";
        var origModel = "";
        var origDivisor = "";
        var origTuom = "";

        $(".btnCollapse").on("click", function () {
            // Toggle the aria-expanded attribute
            var isExpanded = $(this).attr("aria-expanded") === "true";
            $(this).attr("aria-expanded", !isExpanded);
        });

        var convertedRegPrice = 0;
        var convertedCurrPrice = 0;

        $(".editBtn").click(function () {
            origShortDesc = $("#shortDesc").val();
            origBrand = $("#brand").val();
            origModel = $("#model").val();
            origDivisor = $("#divisor").val();
            origTuom = $("#tuom").val();

            $("#currPrice").prop("disabled", false);
            $("#shortDesc").prop("disabled", false);
            $("#brand").prop("disabled", false);
            $("#model").prop("disabled", false);
            $("#divisor").prop("disabled", false);
            $('#tuom').prop("disabled", false);

        });


        if ($('#SelectedTypeId').val() == 1 || $('#SelectedTypeId').val() == 2) {
            $('#SelectedTypeId').prop("disabled", true);
        }

        $("#currPrice").on("change", function () {
            
            var regPrice = $("#regPrice");
            var currPrice = $("#currPrice");
            convertedRegPrice = Number(regPrice.val());
            convertedCurrPrice = Number(currPrice.val());
            var typeId = $('#SelectedTypeId');

            if (typeId.val() < 3) {
                if (convertedCurrPrice >= convertedRegPrice) {
                    regPrice.val($(this).val());
                    typeId.val(1); //Regular
                }
                else if (convertedCurrPrice < convertedRegPrice) {
                    typeId.val(2); //Save
                }
            }
        });

        $(".newPrint").click(function () {
            debugger
            var isCurrDisabled = $('#currPrice').prop('disabled');
            var regPrice = $("#regPrice");
            var currPrice = $("#currPrice");
            convertedRegPrice = Number(regPrice.val());
            convertedCurrPrice = Number(currPrice.val());
            var typeId = $('#SelectedTypeId');

            if (typeId.val() == 5) { // FOR PROMO ENGINE B1_A
                var promoVal = $('#promoVal').val();
                var result = (convertedCurrPrice - promoVal) + convertedCurrPrice;
                if (result <= 0) {
                    alert(`Cannot be printed! Current Price is ${result}`);
                    return false;
                }
            }
            else if (typeId.val() == 6) { // FOR PROMO ENGINE B1_P
                var promoVal = $('#promoVal').val();
                var percent = 100 - (promoVal / 100);
                var result = (convertedCurrPrice * percent) + convertedCurrPrice;
                if (result <= 0) {
                    alert(`Cannot be printed! Current Price is ${result}`);
                    return false;
                }
            }

            if (isCurrDisabled && '@Model.IsExemp' != "Y") {
               
                if (convertedCurrPrice >= convertedRegPrice && typeId.val() < 3) { // FOR SAVE AND REG ONLY
                    regPrice.val(currPrice.val());
                    typeId.val(1); //Regular
                }

                var reportDto = {
                    O3SKU: @Model.O3SKU,
                    SizeId: 0,
                    TypeId: typeId.val(),
                    CategoryId: 0,
                    O3REGU: regPrice.val(),
                    IsEdited: "N",
                    PrintedOn: "OnDemand"
                };

                reportDto.TypeId = $('#SelectedTypeId').val();
                reportDto.CategoryId = $('#SelectedCategoryId').val();
                reportDto.SizeId = $('#SelectedSizeId').val();
                $("#reportIframe").attr("src", "/Report/PrintPreviewSingleReport?response=" + JSON.stringify(reportDto));

                var reportIframe = document.getElementById("reportIframe");
                if (reportIframe) {
                    reportIframe.onload = function () {
                        reportIframe.contentWindow.print();
                    };
                    reportIframe.src = $("#reportIframe").attr("src");
                }

            }else {

                $.ajax({
                    url: '@Url.Action("GetAllReasons", "STRPRC")',
                    type: 'POST',
                    success: function (response) {
                        var remarksOptions = '';

                        for (var i = 0; i < response.length; i++) {
                            var option = response[i];
                            remarksOptions += '<option value="' + option.Description + '">' + option.Description + '</option>';
                        }

                        var dropdownHtml = '<div class="form-row">' +
                            '<div class="form-group row col-12">' +
                            '<label class="col-sm-3 col-form-label" for="remarksDropdown" style="color: red;">Remarks:</label>' +
                            '<select class="col-sm-8  ml-3 form-control custom-select" id="remarksDropdown" >' +
                            remarksOptions +
                            '</select>' +
                            '<label id="expDateLabel" class="col-sm-3 col-form-label" for="expDate" style="color: red;">Exp. Date:</label>' +
                            '<input type="date" id="expDate" name="expDate" class="col-sm-8  ml-3 form-control" style="background-color: #fff; cursor:pointer;" />' +
                            '</div>';

                        var printButtonHtml = '<button id="editPrintBtn" class="btn btn-primary">Print</button>' +
                            '<button type="button" class="btn btn-secondary ml-2" data-dismiss="modal">Cancel</button>';

                        var modalContent = '<div class="modal-dialog modal-dialog-centered">' +
                            '<div class="modal-content">' +
                            '<div class="modal-header">' +
                            '<h5 class="modal-title">Edit Sku # ' + @Model.O3SKU + '</h5>' +
                            '<button type="button" class="close" data-dismiss="modal" aria-label="Close">' +
                            '<span aria-hidden="true">&times;</span>' +
                            '</button>' +
                            '</div>' +
                            '<div class="modal-body">' +
                            dropdownHtml +
                            '</div>' +
                            '<div class="modal-footer">' +
                            printButtonHtml +
                            '</div>' +
                            '</div>' +
                            '</div>';

                        // Remove any existing modals
                        $('#modalView').remove();

                        // Append the modal to the body
                        $('body').append('<div id="modalView" class="modal">' + modalContent + '</div>');

                        // Show the modal with fade-in effect from top
                        $('#modalView').modal({
                            show: true,
                            backdrop: false,
                            keyboard: false
                        });

                        $("#remarksDropdown").change(function () {
                            var selectedRemarks = this.value;

                            if (selectedRemarks != "CER") {
                                $("#expDate").css("display", "none");
                                $("#expDateLabel").css("display", "none");

                            } else {
                                $("#expDate").css("display", "block");
                                $("#expDateLabel").css("display", "block");

                            }
                        });

                        $('#editPrintBtn').click(function () {
                            debugger
                            var selectedRemarks = $('#remarksDropdown').val();
                            var expDate = $("#expDate").val();

                            if (selectedRemarks === "CER" && expDate === "") {
                                alert("Exp. Date is required!");

                                return false;
                            }

                            var selectedRemarks= $('#remarksDropdown').val();
                            var newShortDesc = $('#shortDesc').val();
                            var newBrand = $('#brand').val();
                            var newModel = $('#model').val();
                            var newDivisor = $('#divisor').val();
                            var newTuom = $('#tuom').val();

                            if (selectedRemarks === '') {
                                alert('Please select a valid option for Remarks.');
                                return false;
                            }

                            $("#loadingContainer").show();
                            //var newtypeId = $('#SelectedTypeId').val();

                            if (selectedRemarks !== '') {

                                if (convertedCurrPrice >= convertedRegPrice && typeId.val() < 3) { // FOR SAVE AND REG ONLY
                                    regPrice.val(currPrice.val());
                                    typeId.val(1); //Regular
                                }

                                var reportDto = {
                                    O3SKU: @Model.O3SKU,
                                    SizeId: 0,
                                    TypeId: typeId.val(),
                                    CategoryId: 0,
                                    O3REGU: convertedRegPrice,
                                    O3POS: convertedCurrPrice,
                                    qRemarks: selectedRemarks,
                                    O3IDSC: newShortDesc != origShortDesc ? newShortDesc : origShortDesc,
                                    O3FNAM: newBrand != origBrand ? newBrand : origBrand,
                                    O3MODL: newModel != origModel ? newModel : origModel,
                                    O3DIV: newDivisor != origDivisor ? newDivisor : origDivisor,
                                    O3TUOM: newTuom != origTuom ? newTuom : origTuom,
                                    ExpDateCER: expDate,
                                    IsEdited: "Y",
                                    PrintedOn: "OnDemand"
                                };

                                reportDto.O3FNAM = reportDto.O3FNAM.replace(/&/g, "\\u0026");
                                reportDto.O3IDSC = reportDto.O3IDSC.replace(/&/g, "\\u0026");
                                reportDto.TypeId = $('#SelectedTypeId').val();
                                if (convertedRegPrice == convertedCurrPrice && reportDto.TypeId == 2) {
                                    reportDto.TypeId = 1; // Validation for Negative Save (Curr > Reg)
                                }
                                reportDto.CategoryId = $('#SelectedCategoryId').val();
                                reportDto.SizeId = $('#SelectedSizeId').val();
                                $("#reportIframe").attr("src", "/Report/PrintPreviewSingleReport?response=" + JSON.stringify(reportDto));

                                var reportIframe = document.getElementById("reportIframe");
                                if (reportIframe) {
                                    reportIframe.onload = function () {
                                        $("#loadingContainer").hide();
                                        reportIframe.contentWindow.print();
                                    };
                                    reportIframe.src = $("#reportIframe").attr("src");
                                }
                                $('.clear').val('');
                                $('#modalView').modal('hide');

                            } else {
                                alert('Please input remarks!');
                                $("#loadingContainer").hide();
                            }


                        });
                            },
                            error: function () {}
                        });

            }

        });

        $(".queuebtn").click(function () {
            
            var isCurrDisabled = $('#currPrice').prop('disabled');
            var newShortDesc = $('#shortDesc').val();
            var newBrand = $('#brand').val();
            var newModel = $('#model').val();
            var newDivisor = $('#divisor').val();
            var newTuom = $('#tuom').val();
            var regPrice = $("#regPrice").val();
            var currPrice = $("#currPrice").val();
            convertedRegPrice = Number(regPrice);
            convertedCurrPrice = Number(currPrice);

            var typeId = $('#SelectedTypeId').val();
            var sizeId = $('#SelectedSizeId').val();


            if ((convertedRegPrice == convertedCurrPrice && typeId == 2 ) || (convertedRegPrice < convertedCurrPrice && typeId == 2)) {
                typeId = 1; // Validation for Negative Save (Curr > Reg)
            }
            else if (typeId == 5) { // FOR PROMO ENGINE B1_A
                var promoVal = $('#promoVal').val();
                var result = (convertedCurrPrice - promoVal) + convertedCurrPrice;
                if (result <= 0) {
                    alert(`Cannot be queued! Current Price is ${result}`);
                    return false;
                }
            }
            else if (typeId == 6) { // FOR PROMO ENGINE B1_P
                var promoVal = $('#promoVal').val();
                var percent = 100 - (promoVal / 100);
                var result = (convertedCurrPrice * percent) + convertedCurrPrice;
                if (result <= 0) {
                    alert(`Cannot be queued! Current Price is ${result}`);
                    return false;
                }
            }

            var dto = {};

            if (isCurrDisabled && '@Model.IsExemp' != "Y") {

                dto = {
                    O3SKU: @Model.O3SKU,
                    TypeId: typeId,
                    SizeId: sizeId,
                    IsEdited: "N"
                };

                $.ajax({
                    url: "/Queue/QueueItem",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ dto: dto }),
                    success: function (result) {
                        // Show success modal
                        var modalHtml = '<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">';
                        modalHtml += '<div class="modal-dialog" role="document">';
                        modalHtml += '<div class="modal-content">';
                        modalHtml += '<div class="modal-header">';
                        modalHtml += '<h5 class="modal-title" id="successModalLabel">Success!</h5>';
                        modalHtml += '<button type="button" class="close" data-dismiss="modal" aria-label="Close">';
                        modalHtml += '<span aria-hidden="true">&times;</span>';
                        modalHtml += '</button>';
                        modalHtml += '</div>';
                        modalHtml += '<div class="modal-body">';
                        modalHtml += 'Item queued successfully!';
                        modalHtml += '</div>';
                        modalHtml += '<div class="modal-footer">';
                        modalHtml += '<button type="button" class="qOkBtn btn btn-primary" data-dismiss="modal">OK</button>';
                        modalHtml += '</div>';
                        modalHtml += '</div>';
                        modalHtml += '</div>';
                        modalHtml += '</div>';

                        $('body').append(modalHtml);
                        $('#successModal').modal('show');
                    },
                    error: function (xhr, status, error) {
                        console.error("Error queuing item: " + error);
                    }
