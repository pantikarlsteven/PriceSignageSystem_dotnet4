<script>
    $(document).ready(function () {
        // Get the current URL
        var currentUrl = window.location.href;

        // Loop through each <a> element inside the sidebar
        $(".nav-sidebar a").each(function () {

            // Get the href attribute of the <a> element
            var linkUrl = $(this).attr("href");
            // Check if the current URL matches the href attribute
            if (currentUrl.indexOf(linkUrl) !== -1) {
                $(this).closest("li a").addClass("active");
            }
        });

        $('#syncLink').click(function () {
            $('#inventoryUpdateLoadingContainer').show();

            $.ajax({
                url: '/STRPRC/Sync',
                type: 'POST',
                success: function (response) {
                    $('#inventoryUpdateLoadingContainer').hide();

                    if (response != 0)
                        alert('Done Syncing PCA.');
                    else
                        alert('No Changes.')
                },
                error: function () {

                }
            });
        });

        $('#updateUPC').click(function () {
            $('#inventoryUpdateLoadingContainer').show();

            $.ajax({
                url: '/STRPRC/UpdateUPC',
                type: 'POST',
                success: function (response) {
                    $('#inventoryUpdateLoadingContainer').hide();

                    if (response != 0)
                        alert('Done Updating UPC.');
                    else
                        alert('No Changes.')
                },
                error: function () {

                }
            });
        });

        document.getElementById("pcaLink").addEventListener("click", function(event) {
            event.preventDefault();

             const selectedDate = localStorage.getItem('selectedDate');
             var url = '';

             if (selectedDate != null) {
                 url = '@Url.Action("PCA", "STRPRC")?date=' + selectedDate;
             }
             else {
                url = '@Url.Action("PCA", "STRPRC")';
             }

            window.location.href = url;
        });

         document.getElementById("auditLink").addEventListener("click", function(event) {
            event.preventDefault();

             const selectedDate = localStorage.getItem('selectedDate');
             var url = '';

             if (selectedDate != null) {
                 url = '@Url.Action("Index", "Audit")?date=' + selectedDate;
             }
             else {
                url = '@Url.Action("Index", "Audit")';
             }

            window.location.href = url;
         });

        document.getElementById("UpdatedSTRPRCsLink").addEventListener("click", function(event) {
            event.preventDefault();

             const selectedDate = localStorage.getItem('selectedDate');
             var url = '';

             if (selectedDate != null) {
                 url = '@Url.Action("UpdatedSTRPRC", "STRPRC")?date=' + selectedDate;
             }
             else {
                url = '@Url.Action("UpdatedSTRPRC", "STRPRC")';
             }

            window.location.href = url;
         });
    });

</script>