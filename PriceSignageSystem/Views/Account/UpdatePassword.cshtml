
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://adminlte.io/themes/v3/dist/css/adminlte.min.css?v=3.2.0">

    <style>
        .card {
            background-color: #1C3766 !important;
            border-radius: 15px;
        }
    </style>

</head>
<body class="hold-transition login-page">

    <div class="login-box">
        <div class="text-center mb-2">
            <img class="img-fluid w-75" src="~/Content/Images/snrlogo_blue.png" alt="Logo" />
        </div>
        <div class="card text-white card-outline shadow-lg">
            <div class="card-body">
                <h4 class="text-center mb-4">Update Password</h4>
                <hr class="bg-white">
                <label>Username: @ViewBag.Username</label>
                <div class="form-group">
                    <label>New Password</label>
                    <input type="password" id="newPassword" class="form-control" />
                </div>

                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-default btn-block text-bold btn-block" id="updateBtn">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
<script>
    $(document).ready(function () {

        $('#updateBtn').click(function () {

            var username = '@ViewBag.Username';
            var newPassword = $('#newPassword').val();

            $.ajax({
                url: '/Account/UpdatePassword',
                type: 'POST',
                data: {username: username, newPassword: newPassword},
                success: function (response) {
                    if (response) {
                        window.location.href = '/Account/Register';
                        alert('Password Updated Successfully!');
                    }
                },
                error: function (error) {

                }
            });
        });
    });
</script>

